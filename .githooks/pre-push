#!/bin/sh
#
# Pre-push hook that runs ktlint check
# This hook is called by "git push" after it has checked the remote status,
# but before anything has been pushed.

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "${YELLOW}Running ktlint check...${NC}"

# Run ktlint check
./gradlew ktlintCheck

# Capture exit code
EXIT_CODE=$?

if [ $EXIT_CODE -ne 0 ]; then
    echo ""
    echo "${RED}❌ ktlint check failed!${NC}"
    echo "${YELLOW}Please fix the issues above or run './gradlew ktlintFormat' to auto-fix them.${NC}"
    echo ""
    exit 1
fi

echo "${GREEN}✅ ktlint check passed!${NC}"
exit 0

